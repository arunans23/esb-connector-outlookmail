<template name="deleteAttachment" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="messageId" description="The message ID."/>
    <parameter name="attachmentId" description="The attachment ID."/>
    <sequence>
        <property name="uri.var.messageId" expression="$func:messageId"/>
        <property name="uri.var.attachmentId" expression="$func:attachmentId"/>
        <property name="Accept-Encoding" scope="transport" action="remove"/>
        <call>
            <endpoint>
                <http method="DELETE"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/me/messages/{+uri.var.messageId}/attachments/{+uri.var.attachmentId}"/>
            </endpoint>
        </call>
    </sequence>
</template>